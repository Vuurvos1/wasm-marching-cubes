{
	"name": "wasm-marching-cubes",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm build:wasm && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm test:unit -- --run",
		"bench": "vitest bench",
		"build:rust": "cargo build --manifest-path ./marching_cubes/Cargo.toml --release --target wasm32-unknown-unknown",
		"build:bindgen": "wasm-bindgen ./marching_cubes/target/wasm32-unknown-unknown/release/marching_cubes.wasm --out-dir ./src/lib/wasm/marching_cubes",
		"build:wasm": "pnpm build:rust && pnpm build:bindgen"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@types/three": "^0.171.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.19.5",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.22.0",
		"vite": "^5.4.14",
		"vite-plugin-top-level-await": "^1.4.4",
		"vite-plugin-wasm": "^3.4.1",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"svelte-tweakpane-ui": "^1.5.2",
		"three": "^0.172.0",
		"three-viewport-gizmo": "^2.0.2"
	}
}
